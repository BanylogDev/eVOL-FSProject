@page "/login"
@layout Layout.NavMenu

@using System.ComponentModel.DataAnnotations

<EditForm Model="model" OnValidSubmit="HandleValidSubmit" class="login-stage">
    <div class="auth-card card">
        <h2 class="panel-title">Login</h2>

        <div class="form-row">
            <label for="email">Email</label>
            <InputText id="email" @bind-Value="model.Email" class="input" />
            <ValidationMessage For="@(() => model.Email)" class="validation-message" />
        </div>

        <div class="form-row">
            <label for="password">Password</label>
            <InputText id="password" @bind-Value="model.Password" type="password" class="input" />
            <ValidationMessage For="@(() => model.Password)" class="validation-message" />
        </div>

        <div class="form-row form-actions">
            <button type="submit" class="btn primary">Sign in</button>
        </div>

        <div class="small-note">
            <span>Don't have an account?</span>
            <a href="/register" class="link">Register</a>
        </div>
    </div>
</EditForm>



@code {
    private LoginModel model = new();

    private Task HandleValidSubmit()
    {
        // placeholder login handler
        return Task.CompletedTask;
    }

    public class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; }

        [Required]
        public string Password { get; set; }
    }
}
<style>
    .login-stage {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
        min-height: calc(100vh - 124px);
        box-sizing: border-box;
    }

    .auth-card {
        width: 420px;
        padding: 28px;
        border-radius: 16px;
        border: 1px solid rgba(255,215,0,0.06);
        background: linear-gradient(180deg, rgba(20,12,8,0.6), rgba(10,8,6,0.4));
        color: #d6d6d6;
        box-shadow: 0 18px 50px rgba(0,0,0,0.75);
    }

    .panel-title {
        color: #ffd700;
        margin: 0 0 18px 0;
        font-size: 20px;
        font-weight: 800;
    }

    .form-row {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 12px;
    }

    label {
        color: #d6d6d6;
        font-weight: 700;
        font-size: 13px;
    }

    .input {
        background: rgba(255,255,255,0.02);
        border: 1px solid rgba(255,255,255,0.04);
        padding: 12px 14px;
        color: #fff;
        border-radius: 10px;
        outline: none;
        font-size: 15px;
    }

        .input:focus {
            border-color: #0eb7ff;
            box-shadow: 0 8px 30px rgba(14,183,255,0.06);
        }

    .validation-message {
        color: #ffb5b5;
        font-size: 13px;
    }

    .form-actions {
